  "homepage": "https://github.com/build-refugee-stories/refugee_stories-be#readme",
  "devDependencies": {
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "apidoc": "^0.17.7",
    "apidoc-markdown": "^0.2.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
